{% extends 'base.html.twig' %}

{% block title %}Add Author{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3>Add New Author</h3>
                </div>
                <div class="card-body">
                    {{ form_start(f) }}
                    <div class="form-group">
                        {{ form_row(f.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(f.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(f.Ajouter, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                    {{ form_end(f) }}
                    <a href="{{ path('app_Affiche') }}" class="btn btn-secondary">Back to Authors</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}