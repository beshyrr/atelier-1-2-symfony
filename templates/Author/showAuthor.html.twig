{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
<div class="container">
    <h1>Author Details</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Author ID: {{ author.id }}</h5>
            <p class="card-text">Username: {{ author.username }}</p>
            <p class="card-text">Number of books: {{ author.nb_books }}</p>
        </div>
    </div>
</div>
{% endblock %}
