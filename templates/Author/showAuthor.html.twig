{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Author Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>ID:</strong>
                        </div>
                        <div class="col-sm-9">
                            {{ author.id }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Username:</strong>
                        </div>
                        <div class="col-sm-9">
                            {{ author.username }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <strong>Books:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge badge-success">{{ author.nb_books }} books</span>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <a href="{{ path('app_author') }}" class="btn btn-primary">Back to Authors</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
